# Pay4U Server Environment Configuration Template
# Copy this file to .env in the backend directory and update the values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=5000
NODE_ENV=production
JWT_SECRET=your_jwt_secret_here_generate_a_strong_random_string

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGO_URI=mongodb://localhost:27017/pay4u
# For MongoDB Atlas (cloud):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/pay4u?retryWrites=true&w=majority

# ===========================================
# API KEYS - UPDATE WITH YOUR ACTUAL KEYS
# ===========================================

# Recharge API Configuration
RECHARGE_API_KEY=your_recharge_api_key
RECHARGE_API_URL=https://api.recharge-provider.com
RECHARGE_PARTNER_ID=your_partner_id

# Bill Payment API Configuration
BILL_PAYMENT_API_KEY=your_bill_payment_api_key
BILL_PAYMENT_API_URL=https://api.billpayment-provider.com
BILL_PAYMENT_PARTNER_ID=your_partner_id

# DMT (Domestic Money Transfer) API Configuration
DMT_API_KEY=your_dmt_api_key
DMT_API_URL=https://api.dmt-provider.com
DMT_PARTNER_ID=your_partner_id
DMT_SENDER_ID=your_sender_id

# AEPS (Aadhaar Enabled Payment System) API Configuration
AEPS_API_KEY=your_aeps_api_key
AEPS_API_URL=https://api.aeps-provider.com
AEPS_PARTNER_ID=your_partner_id
AEPS_MERCHANT_ID=your_merchant_id

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM_NAME=Pay4U
EMAIL_FROM_ADDRESS=noreply@your-domain.com

# ===========================================
# SMS CONFIGURATION
# ===========================================
SMS_API_KEY=your_sms_api_key
SMS_API_URL=https://api.sms-provider.com
SMS_SENDER_ID=PAY4U
SMS_TEMPLATE_ID=your_template_id

# ===========================================
# PAYMENT GATEWAY CONFIGURATION
# ===========================================
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
ENCRYPTION_KEY=your_32_character_encryption_key
SESSION_SECRET=your_session_secret_key
CORS_ORIGIN=https://your-domain.com

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
# 5MB in bytes

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760
# 10MB
LOG_MAX_FILES=5

# ===========================================
# REDIS CONFIGURATION (Optional)
# ===========================================
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# ===========================================
# WEBHOOK URLS
# ===========================================
WEBHOOK_BASE_URL=https://your-domain.com/api/webhooks
RECHARGE_WEBHOOK_URL=${WEBHOOK_BASE_URL}/recharge
BILL_PAYMENT_WEBHOOK_URL=${WEBHOOK_BASE_URL}/bill-payment
DMT_WEBHOOK_URL=${WEBHOOK_BASE_URL}/dmt
AEPS_WEBHOOK_URL=${WEBHOOK_BASE_URL}/aeps

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PHONE=+919999999999
SUPPORT_EMAIL=support@your-domain.com
SUPPORT_PHONE=+919999999999

# ===========================================
# BUSINESS CONFIGURATION
# ===========================================
COMPANY_NAME=Pay4U
COMPANY_ADDRESS=Your Company Address
COMPANY_PHONE=+919999999999
COMPANY_EMAIL=info@your-domain.com
COMPANY_WEBSITE=https://your-domain.com

# ===========================================
# COMMISSION CONFIGURATION
# ===========================================
DEFAULT_RECHARGE_COMMISSION=2.5
DEFAULT_BILL_PAYMENT_COMMISSION=1.5
DEFAULT_DMT_COMMISSION=0.5
DEFAULT_AEPS_COMMISSION=3.0

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
# Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1